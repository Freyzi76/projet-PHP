
var flecheViandes = document.getElementById("flecheViandes");
var menuViandes = document.getElementById("menuViandes");

var flecheFrais = document.getElementById("flecheFrais");
var menuFrais = document.getElementById("menuFrais");

var main = document.getElementById("main");
var mainNormalWidth = main.offsetWidth;
var mainWidthMenuOpen = mainNormalWidth - 270;
var mainWidthMenuOpenPX = mainWidthMenuOpen + "px";
var mainNormalWidthPX = mainNormalWidth + "px";


var flecheDesactive = 0 + "deg";
var flecheActive = 180 + "deg";


var secondMenuPaddingTop = document.getElementById("secondMenu");

var secondMenuPaddingTopPX = "28px"


var checkMenu = document.getElementById("check");

var checkViandes = document.getElementById("checkViandes");
var checkFrais = document.getElementById("checkFrais");



function ActiveUnderMenu(menuId) {

    var menuNumber = menuId;


    if (menuNumber == 0 && checkMenu.checked == false) {

        main.style.marginLeft = "270px";
        main.style.width = mainWidthMenuOpenPX;

    } 
    
    if (menuNumber == 0 && checkMenu.checked == true) {

        main.style.marginLeft = "0px";
        main.style.width = mainNormalWidthPX;
    }

    if (menuNumber == 10) {

        main.style.marginLeft = "0px";
        main.style.width = mainNormalWidthPX;
    }


    if(menuNumber == 1 && checkViandes.checked == true ){

        checkFrais.checked = false;
        
        flecheViandes.style.rotate = flecheActive;
        menuViandes.style.display = "block"; 
        secondMenuPaddingTop.style.paddingTop = secondMenuPaddingTopPX;



    } else {
        
        flecheViandes.style.rotate = flecheDesactive;
        menuViandes.style.display = "none";
        secondMenuPaddingTop.style.paddingTop = "0";
    }




    if(menuNumber == 2 && checkFrais.checked == true ){

        checkViandes.checked = false;
        
        flecheFrais.style.rotate = flecheActive;
        menuFrais.style.display = "block";

        

    } else {
        
        flecheFrais.style.rotate = flecheDesactive;
        menuFrais.style.display = "none";
        

    }


};







